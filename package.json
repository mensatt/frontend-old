{
  "name": "mensatt-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:dev": "NEXT_PUBLIC_APP_ENV=development next build",
    "start": "next start",
    "lint": "yarn run lint:next && yarn run lint:style && yarn lint:prettier",
    "lint-fix": "yarn run lint:style-fix && yarn lint:prettier-fix",
    "lint:next": "next lint",
    "lint:style": "stylelint \"src/**/*.scss\"",
    "lint:style-fix": "stylelint \"src/**/*.scss\" --fix",
    "lint:prettier": "yarn prettier -c --ignore-path .gitignore .",
    "lint:prettier-fix": "yarn prettier -w --ignore-path .gitignore .",
    "types": "graphql-codegen --config codegen.yml && prettier -w src/graphql/graphql-types.ts",
    "clean": "rm -rf node_modules/",
    "unix:dep-licenses-update": "yarn licenses list > DEPLICENSESDETAILS && sed -i '/Done in \\|yarn licenses/d' DEPLICENSESDETAILS",
    "unix:dep-licenses-summary": "sed '/^\\(├\\|└\\)/!d' DEPLICENSESDETAILS"
  },
  "dependencies": {
    "@apollo/client": "^3.7.10",
    "@babel/core": "^7.21.0",
    "apollo-upload-client": "^17.0.0",
    "babel-plugin-inline-react-svg": "^2.0.2",
    "dayjs": "^1.11.7",
    "graphql": "^16.5.0",
    "next": "12.3.1",
    "next-i18next": "12.1.0",
    "next-pwa": "^5.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactjs-popup": "^2.0.5",
    "sass": "^1.58.3"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^3.2.2",
    "@graphql-codegen/introspection": "^3.0.1",
    "@graphql-codegen/typescript": "^3.0.2",
    "@graphql-codegen/typescript-operations": "^3.0.2",
    "@trivago/prettier-plugin-sort-imports": "^4.1.1",
    "@types/apollo-upload-client": "^17.0.1",
    "@types/node": "^18.14.6",
    "@types/react": "^18.0.28",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-next": "12.2.3",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "postcss": "^8.4.21",
    "postcss-scss": "^4.0.6",
    "prettier": "^2.8.4",
    "stylelint": "^15.2.0",
    "stylelint-config-standard": "^30.0.1",
    "stylelint-order": "^6.0.3",
    "stylelint-scss": "^4.4.0",
    "ts-node": "^10.9.1",
    "typescript": "4.9.5",
    "webpack": "^5.73.0"
  },
  "dependencyRationale": {
    "next": "NextJS 13 introduces multiple big changes that (at the time of writing) we did decided against implementing",
    "next-i18next": "See rationale for next",
    "eslint-config-next": "See rationale for next",
    "ts-node": "Peer dependency of @graphql-codegen/cli"
  }
}
