{
  "name": "neosigfood-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "yarn run lint:next && yarn run lint:style && yarn lint:prettier",
    "lint-fix": "yarn run lint:style-fix && yarn lint:prettier-fix",
    "lint:next": "next lint",
    "lint:style": "stylelint \"src/**/*.scss\"",
    "lint:style-fix": "stylelint \"src/**/*.scss\" --fix",
    "lint:prettier": "yarn prettier -c --ignore-path .gitignore .",
    "lint:prettier-fix": "yarn prettier -w --ignore-path .gitignore .",
    "types": "graphql-codegen --config codegen.yml && prettier -w src/graphql/graphql-types.ts",
    "clean": "rm -rf node_modules/"
  },
  "dependencies": {
    "@apollo/client": "^3.6.4",
    "@babel/core": "^7.18.0",
    "@reduxjs/toolkit": "^1.8.1",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "graphql": "^16.5.0",
    "next": "12.1.6",
    "next-i18next": "^11.0.0",
    "next-pwa": "^5.5.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-redux": "^8.0.1",
    "sass": "^1.51.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "2.4.11",
    "@graphql-codegen/typescript-operations": "2.4.0",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "@typescript-eslint/eslint-plugin": "^5.25.0",
    "@typescript-eslint/parser": "^5.25.0",
    "dayjs": "^1.11.2",
    "eslint": "^8.15.0",
    "eslint-config-next": "^12.1.6",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "postcss": "^8.4.14",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.6.2",
    "stylelint": "^14.8.2",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.2.0",
    "typescript": "4.6.4",
    "webpack": "^5.72.1"
  }
}
