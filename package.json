{
  "name": "mensatt-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "yarn run lint:next && yarn run lint:style && yarn lint:prettier",
    "lint-fix": "yarn run lint:style-fix && yarn lint:prettier-fix",
    "lint:next": "next lint",
    "lint:style": "stylelint \"src/**/*.scss\"",
    "lint:style-fix": "stylelint \"src/**/*.scss\" --fix",
    "lint:prettier": "yarn prettier -c --ignore-path .gitignore .",
    "lint:prettier-fix": "yarn prettier -w --ignore-path .gitignore .",
    "types": "graphql-codegen --config codegen.yml && prettier -w src/graphql/graphql-types.ts",
    "clean": "rm -rf node_modules/"
  },
  "dependencies": {
    "@apollo/client": "^3.6.9",
    "@babel/core": "^7.18.9",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "dayjs": "^1.11.4",
    "graphql": "^16.5.0",
    "next": "12.2.3",
    "next-i18next": "^11.2.2",
    "next-pwa": "^5.5.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "reactjs-popup": "^2.0.5",
    "sass": "^1.53.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "2.9.1",
    "@graphql-codegen/introspection": "2.2.0",
    "@graphql-codegen/typescript": "2.7.2",
    "@graphql-codegen/typescript-operations": "2.5.2",
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.15",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-next": "^12.2.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "postcss": "^8.4.14",
    "postcss-scss": "^4.0.4",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "4.7.4",
    "webpack": "^5.73.0"
  }
}
