{
  "name": "neosigfood-frontend",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "yarn run lint:next && yarn run lint:style && yarn lint:prettier",
    "lint-fix": "yarn run lint:style-fix && yarn lint:prettier-fix",
    "lint:next": "next lint",
    "lint:style": "stylelint \"src/**/*.scss\"",
    "lint:style-fix": "stylelint \"src/**/*.scss\" --fix",
    "lint:prettier": "yarn prettier -c --ignore-path .gitignore .",
    "lint:prettier-fix": "yarn prettier -w --ignore-path .gitignore .",
    "types": "graphql-codegen --config codegen.yml && prettier -w src/graphql/graphql-types.ts",
    "clean": "rm -rf node_modules/"
  },
  "dependencies": {
    "@apollo/client": "^3.5.8",
    "@babel/core": "^7.0.0-0",
    "@reduxjs/toolkit": "^1.7.0",
    "graphql": "^15.0.0",
    "next": "12.1.0",
    "next-pwa": "^5.4.4",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "sass": "^1.49.7"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/node": "^17.0.14",
    "@types/react": "^17.0.38",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dayjs": "^1.10.7",
    "eslint": "^8.8.0",
    "eslint-config-next": "^12.0.10",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "postcss": "^8.4.6",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.5.1",
    "stylelint": "^14.5.3",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.1.0",
    "typescript": "4.5.5",
    "webpack": "^5.69.1",
    "@graphql-codegen/cli": "2.6.2",
    "@graphql-codegen/introspection": "2.1.1",
    "@graphql-codegen/typescript": "2.4.5",
    "@graphql-codegen/typescript-operations": "2.3.2"
  }
}
